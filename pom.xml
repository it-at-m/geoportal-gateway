        <maven-enforcer-plugin.version>3.5.0</maven-enforcer-plugin.version>
        <maven-versions-plugin.version>2.17.1</maven-versions-plugin.version>
        <maven-resources-plugin.version>3.3.1</maven-resources-plugin.version>
        <maven-javadoc-plugin.version>3.8.0</maven-javadoc-plugin.version>
        <git-commit-id-plugin.version>4.9.10</git-commit-id-plugin.version>

        <maven-required.version>3.2.5</maven-required.version>

        <jacoco.version>0.8.12</jacoco.version>
        <spotless.version>2.43.0</spotless.version>
        <pitest.version>1.15.8</pitest.version>
        <pmd.version>3.23.0</pmd.version>
        <checkstyle-plugin.version>3.4.0</checkstyle-plugin.version>
        <checkstyle.version>10.17.0</checkstyle.version>
    </properties>

    <scm>
        <connection>scm:git:git://ext-github.swm.de/LHM/gdi-geoportal-gateway</connection>
        <developerConnection>scm:git:git:@ext-github.swm.de:LHM/gdi-geoportal-gateway</developerConnection>
