                        <param>de.swm.lhm.geoportal.**.*IntegrationTest</param>
                        <param>de.swm.lhm.geoportal.**.*ControllerTest</param>
                        <param>de.swm.lhm.geoportal.**.*GeoServiceTest</param>
                        <param>de.swm.lhm.geoportal.**.*RepositoryTest</param>
                        <param>de.swm.lhm.geoportal.**.*RoutesTest</param>
